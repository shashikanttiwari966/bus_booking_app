<div class="container"> 
  <div class="mt-5 w-100">
    <h5 class="text-center">Add Your Bus</h5>
    <%= link_to new_bus_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} do %>
    <div class="p-5 m-3 border-1 text-center bg-light add-bus">
      <i class="fa fa-plus" style="font-size: 40px; color: lightblue;" aria-hidden="true"></i>
    </div>
  <%end%>
  </div>

  <div class="mt-5">
    <h5 class="text-center">
      <i class="fa fa-bus" aria-hidden="true"></i> 
        Lists of buses
      <i class="fa fa-bus" aria-hidden="true"></i>
    </h5>

    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Bus Name</th>
          <th scope="col">Bus Number</th>
          <th scope="col">Total Seat</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @buses.each_with_index do |bus,index|%>
          <tr>
            <th scope="row"><%= index + 1%></th>
            <td><%= bus.bus_name%></td>
            <td><%= bus.bus_number%></td>
            <td><%= bus.total_seat%></td>
            <td>
               <%= render "buses/action", bus: bus%>
            </td>
          </tr>
          
          <!-- Add services -->
          <div id="bus-service-<%= bus.id %>" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content"></div>
            </div>
          </div>

          <!-- Add drivers -->
          <div id="bus-driver-<%= bus.id %>" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content"></div>
            </div>
          </div>
        <%end%>
      </tbody>
    </table>
  </div>


  <!-- Add buses -->

<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content"></div>
    </div>
  </div>
</div>